---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={`${t('about.title')} - Pesa Leo`}>
  <Header />
  
  <main>
    <section class="page-hero">
      <div class="container">
        <h1 class="page-title fade-in">{t('about.title')}</h1>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="about-content">
          <div class="about-text fade-in">
            <p class="lead">{t('about.content')}</p>
            
            <div class="about-details">
              <h2>{lang === 'en' ? 'Our Mission' : 'Dhamira Yetu'}</h2>
              <p>
                {lang === 'en' 
                  ? 'At Pesa Leo, we believe that financial inclusion is a fundamental right. We leverage cutting-edge technology to provide instant, transparent, and affordable financial services to the people of Tanzania.'
                  : 'Katika Pesa Leo, tunaamini kuwa ujumuishaji wa kifedha ni haki ya kimsingi. Tunatumia teknolojia ya kisasa kutoa huduma za kifedha za papo hapo, za uwazi, na nafuu kwa watu wa Tanzania.'
                }
              </p>

              <h2>{lang === 'en' ? 'Our Vision' : 'Maono Yetu'}</h2>
              <p>
                {lang === 'en'
                  ? 'To become the leading financial technology company in Tanzania, empowering millions of people with accessible and reliable financial services.'
                  : 'Kuwa kampuni kuu ya teknolojia ya kifedha nchini Tanzania, tukiwawezesha mamilioni ya watu na huduma za kifedha zinazopatikana na za kuaminika.'
                }
              </p>

              <h2>{lang === 'en' ? 'Our Values' : 'Maadili Yetu'}</h2>
              <div class="values-grid">
                <div class="value-item">
                  <h3>{lang === 'en' ? 'Transparency' : 'Uwazi'}</h3>
                  <p>{lang === 'en' ? 'Clear terms, no hidden fees' : 'Masharti wazi, hakuna ada za siri'}</p>
                </div>
                <div class="value-item">
                  <h3>{lang === 'en' ? 'Speed' : 'Kasi'}</h3>
                  <p>{lang === 'en' ? 'Quick decisions, instant disbursements' : 'Maamuzi ya haraka, malipo ya papo hapo'}</p>
                </div>
                <div class="value-item">
                  <h3>{lang === 'en' ? 'Security' : 'Usalama'}</h3>
                  <p>{lang === 'en' ? 'Your data and money are always safe' : 'Data na pesa zako ni salama kila wakati'}</p>
                </div>
                <div class="value-item">
                  <h3>{lang === 'en' ? 'Innovation' : 'Ubunifu'}</h3>
                  <p>{lang === 'en' ? 'Continuously improving our services' : 'Kuboresha huduma zetu kila wakati'}</p>
                </div>
              </div>
            </div>
          </div>

          <div class="about-image fade-in">
            <img src="https://images.pexels.com/photos/3182812/pexels-photo-3182812.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
                 alt="Team collaboration" class="about-img">
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="section stats-section">
      <div class="container">
        <div class="stats-grid">
          <div class="stat-item fade-in">
            <div class="stat-number">50,000+</div>
            <div class="stat-label">{lang === 'en' ? 'Happy Customers' : 'Wateja Wenye Furaha'}</div>
          </div>
          <div class="stat-item fade-in">
            <div class="stat-number">TSH 5B+</div>
            <div class="stat-label">{lang === 'en' ? 'Loans Disbursed' : 'Mikopo Iliyotolewa'}</div>
          </div>
          <div class="stat-item fade-in">
            <div class="stat-number">95%</div>
            <div class="stat-label">{lang === 'en' ? 'Approval Rate' : 'Kiwango cha Idhini'}</div>
          </div>
          <div class="stat-item fade-in">
            <div class="stat-number">2 Min</div>
            <div class="stat-label">{lang === 'en' ? 'Average Processing Time' : 'Wastani wa Muda wa Uchakataji'}</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    padding: 120px 0 60px;
    color: white;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
  }

  .about-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 80px;
    align-items: start;
  }

  .lead {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 40px;
    line-height: 1.6;
  }

  .about-details h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 40px 0 16px;
    color: var(--color-primary);
  }

  .about-details h2:first-of-type {
    margin-top: 0;
  }

  .about-details p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .values-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    margin-top: 30px;
  }

  .value-item {
    padding: 24px;
    background: var(--color-surface);
    border-radius: var(--radius);
    border-left: 4px solid var(--color-primary);
  }

  .value-item h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--color-text);
  }

  .value-item p {
    color: var(--color-text-secondary);
    font-size: 14px;
    margin: 0;
  }

  .about-img {
    width: 100%;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }

  .stats-section {
    background: var(--color-surface);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
  }

  .stat-item {
    text-align: center;
    padding: 30px;
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 8px;
  }

  .stat-label {
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 100px 0 40px;
    }

    .page-title {
      font-size: 2.5rem;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .lead {
      font-size: 1.1rem;
    }

    .about-details h2 {
      font-size: 1.5rem;
    }

    .values-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .stats-grid {
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .stat-number {
      font-size: 2rem;
    }
  }
</style>